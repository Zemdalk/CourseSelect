<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">选修课程</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">

          <div style="display: flex; justify-content: center; align-items: center;">
          <%= form_tag(search_courses_path, method: :get, class: 'form-inline') do %>
            <div class="form-group">
              <%= label_tag(:course_week, "上课时间") %>
              <%= select_tag(:course_week, options_for_select(Course.pluck(:course_week).uniq), prompt: "选择上课时间", class: 'form-control') %>
            </div>
            <div class="form-group">
              <%= label_tag(:course_type, "课程属性") %>
              <%= select_tag(:course_type, options_for_select(Course.pluck(:course_type).uniq), prompt: "选择课程属性", class: 'form-control') %>
            </div>
            <div class="form-group">
              <%= label_tag(:course_name, "课程名称") %>
              <%= text_field_tag(:course_name, params[:course_name], class: 'form-control') %>
            </div>
            <%= submit_tag("查询", class: 'btn btn-primary') %>
          <% end %>
          </div>

          <table class="table table-striped table-hover">
            <thead>
            <tr>
              <th>课程编号</th>
              <th>课程名称</th>
              <th>上课时间</th>
              <th>课时/学分</th>
              <th>限选</th>
              <th>已选</th>
              <th>课程属性</th>
              <th>授课方式</th>
              <th>考试方式</th>
              <th>主讲教师</th>
              <th>操作</th>
            </tr>
            </thead>

            <tbody>
            <% @course_unselect.each do |course| %>
                <tr>

                  <td><%= course.course_code %></td>
                  <td><%= course.name %></td>
                  <td><%= course.course_week %></td>
                  <td><%= course.credit %></td>
                  <td><%= course.limit_num %></td>
                  <td><%= course.student_num %></td>
                  <td><%= course.course_type %></td>
                  <td><%= course.teaching_type %></td>
                  <td><%= course.exam_type %></td>
                  <td><%= course.teacher.name %></td>
                  <td><%= link_to "选课", select_course_path(course), class: 'btn-sm btn-info' %></td>

                </tr>
            <% end %>
            </tbody>
          </table>
          <%= will_paginate @course_unselect %>
        </div>
      </div>
    </div>
  </div>
</div>


