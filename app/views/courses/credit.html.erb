<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">学分提示</h3>
        </div>

        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>
            <tr>
              <th>类别</th>
              <th>公共选修课</th>
              <th>专业学位课</th>
              <th>所有课程</th>
            </tr>
            </thead>

            <tbody>
            <tr>
              <td>学分要求</td>
              <td><%= ">=" + @credit_requirements.public_mandatory_credits.to_s + "学分" %></td>
              <td><%= ">=" + @credit_requirements.major_credits.to_s + "学分" %></td>
              <td><%= ">=" + @credit_requirements.all_credits.to_s + "学分" %></td>
            </tr>
            <tr>
              <td>已选学分</td>
              <td><%= @credit_selected_public_mandatory.to_s + "学分" %></td>
              <td><%= @credit_selected_major.to_s + "学分" %></td>
              <td><%= @credit_selected_all.to_s + "学分" %></td>
            </tr>
            <tr>
              <td>尚需学分</td>
              <td><%= @credit_needed_public_mandatory.to_s + "学分" %></td>
              <td><%= @credit_needed_major.to_s + "学分" %></td>
              <td><%= @credit_needed_all.to_s + "学分" %></td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


